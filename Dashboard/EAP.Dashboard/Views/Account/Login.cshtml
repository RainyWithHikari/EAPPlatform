<main>
    <div class="row" style="width:100%;position: absolute; z-index: 999; margin-top: 10px; margin-left: auto; align-items: flex-end;">
        <img src="~/Content/Pictures/logo/Logo_W_SMDi4_400x65_简.png" class="col-3" />
        <h2 class="col-9 title ">@ViewBag.site EAP Dashboard</h2>
    </div>

    <div id="particles-js">

    </div>

    <div class="card text-center ">
        @*account-container*@
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="normal-tab" data-bs-toggle="tab" data-bs-target="#normal-tab-pane" type="button" role="tab" aria-controls="normal-tab-pane" aria-selected="true">Normal Login</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="sso-tab" data-bs-toggle="tab" data-bs-target="#sso-tab-pane" type="button" role="tab" aria-controls="sso-tab-pane" aria-selected="false">SSO Login</button>
                </li>

            </ul>
        </div>
        <div class="card-body">

            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="normal-tab-pane" role="tabpanel" aria-labelledby="normal-tab" tabindex="0">
                    <h5 class="card-title">Normal Login</h5>
                    @using (Html.BeginForm("login", "account", FormMethod.Post, new { @class = "account-form", role = "form" }))
                    {
                        @Html.ValidationMessage("error_message", new { @class = "error" })
                        @Html.AntiForgeryToken()

                        <div class="row  mb-3">
                            <div class="input-group">
                                <span class="input-group-text" id="inputGroup-sizing-default">Username</span>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Please enter your Username" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "error" })

                            </div>


                        </div>



                        <div class="row mb-3">
                            <div class="input-group">
                                <span class="input-group-text" id="inputGroup-sizing-default">Password</span>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Please enter your Password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                            </div>
                        </div>
                        <button class="btn btn-outline-primary " type="submit">Log In</button>


                    }
                </div>
                <div class="tab-pane fade" id="sso-tab-pane" role="tabpanel" aria-labelledby="sso-tab" tabindex="0">
                    <h5 class="card-title">SSO Login</h5>
                    @using (Html.BeginForm("SSOLogin", "account", FormMethod.Post, new { @class = "account-form", role = "form" }))
                    {
                        @Html.ValidationMessage("error_message", new { @class = "error" })
                        @Html.AntiForgeryToken()

                        <div class="row  mb-3">
                            <div class="input-group">

                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Please enter your M365 Account" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "error" })
                                <span class="input-group-text" id="basic-addon2">&#64;usiglobal.com</span>
                            </div>


                        </div>



                        <div class="row mb-3">
                            <div class="input-group">
                                <span class="input-group-text" id="inputGroup-sizing-default">Password</span>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Please enter your M365 Password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                            </div>
                        </div>
                        <button class="btn btn-outline-primary " type="submit">Log In</button>

                    }


                </div>

            </div>



        </div>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                @*style="position: absolute; z-index: 999;"*@
                <strong>Sorry!</strong> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

