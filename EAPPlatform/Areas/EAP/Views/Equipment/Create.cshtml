
@model EAPPlatform.ViewModel.EAP.EquipmentVMs.EquipmentVM
@using WalkingTec.Mvvm.Core.Extensions;
@inject IStringLocalizer<Program> Localizer;

<wt:container>
  <wt:form vm="@Model" url="/EAP/Equipment/Create" >
    <wt:row  items-per-row="ItemsPerRowEnum.Two">
      <wt:textbox field="Entity.EQID"/>
      <wt:combobox field="Entity.EquipmentTypeId"  item-url="/EAP/Equipment/GetEquipmentTypes" empty-text="@Localizer["Sys.PleaseSelect"]" id="g74869f9aab56477b97822e996b6c0537" multi-select="false"/>
